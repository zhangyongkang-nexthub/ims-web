{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts", 
    "src/**/*", 
    "src/**/*.vue",
    "auto-imports.d.ts", // 插件自动生成的文件
    "components.d.ts"    // 插件自动生成的文件
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    
    // --- 新增以下两行优化编译 ---
    "skipLibCheck": true,
    "isolatedModules": true,
    
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}